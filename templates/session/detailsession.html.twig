{% extends 'base.html.twig' %}

{% block title %}Détails de la Session{% endblock %}

{% block body %}

<h2>{{session.nom}} - Formateur: {{ session.formateur }}<br>   </h2>
Date de debut: {{session.dateDebutFormat}}<br>
Date de fin: {{session.dateFinFormat}}<br>
Places totales: {{ session.nbPlace }}<br>
Places Restantes: {{ session.nbPlace - session.stagiaires|length }}<br>

<h2>Stagiaires inscrits: </h2>
{% for stagiaire in session.stagiaires %}
    {{ stagiaire.nom }} {{stagiaire.prenom}}<br>
{% endfor %}

<h3>Non inscrits:</h3>
{% for stagiaire in nonInscrits %}
    {{ stagiaire.nom }} {{ stagiaire.prenom}}<br>
{% endfor %}

<h3>Modules Programmés:</h3>
{% for programme in session.programmes %}
    {{ programme.module }}- Categorie: {{programme.module.categorie}} - Durée: {{ programme.nbJour > 1 ? programme.nbJour ~ ' jours' : programme.nbJour ~ ' journée' }}<br>
{% endfor %}

<h3>Modules non programmés:</h3>
{% for module in nonProgrammes %}
    {{ module.nom }}<br>
    
{% endfor %}
{% endblock %}
