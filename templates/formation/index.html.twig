{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
<div class="formation-container">
    <div class="formation-information">
        <div class="formation-title">
            <p class="title"><span class="hardgreen">FORMA</span><span class="lightgreen">TIONS</span></p>
        </div>
        <div class="formations">
            {% for formation in formations %}
                <div class="formation-name">
                    <a href="{{ path('show_sessions', {'id':formation.id}) }}">
                        {{ formation }} 
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
